---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Timeline from '../components/Timeline.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="flex flex-col md:flex-row">
				<div class="md:basis-2/3">
					<h2>Hi, I'm Nekvinder</h2>
					<h6>FullStack Engineer | AWS | DevOps | Security </h6>
					<h6>Embedded Hardware | Certified Solutions Architect  </h6>
				</div>
				<div class="md:basis-1/3 flex justify-center md:justify-start mt-4 md:mt-0">
					<img class="profile-img" width={140} height={70} src="profile.png" alt="" />
				</div>
			</div>
			<h4 class="homepage-subtitle">Work</h4>
			<Timeline />
			<h4 class="homepage-subtitle">Projects</h4>
			<ul class="project-list">
				<li class="project-item">
					<h5 class="project-title">My Arch Linux Rice</h5>
					<div class="project-content">
						<p class="project-description">
							I've built my custom desktop experience on top of Arch Linux.<br>
							<a href="/my-os" class="project-link">Read more about it here</a>
						</p>
					</div>
				</li>
				<li class="project-item">
					<h5 class="project-title">Seed Segregator</h5>
					<div class="project-content">
						<p class="project-description">
							Using computer vision and color-map boundaries to determine quality of lentils.<br>
							Built for wholesale vendors with a mobile app for quality check team, upload and get quality verification. 
							Monthly report generation for Admin office and quality control.<br>
							Core part of backend service is Open source : <a href="https://github.com/nekvinder/SeedSeggregatorBackend" class="project-link">Seed Segregator</a>
						</p>
					</div>
				</li>
			</ul>

<style>
	.project-list {
		list-style-type: none;
		padding: 0;
	}

	.project-item {
		background-color: #2a2a2a;
		border-radius: 8px;
		margin-bottom: 20px;
		padding: 20px;
		transition: transform 0.3s ease-in-out;
	}

	@media (min-width: 768px) {
		.project-item:hover {
			transform: translateY(-5px);
		}
	}

	.project-title {
		color: #e0e0e0;
		font-size: 1.2rem;
		margin-bottom: 10px;
	}

	.project-content {
		max-height: none;
		overflow: visible;
		opacity: 1;
	}

	@media (min-width: 768px) {
		.project-content {
			opacity: 0;
			max-height: 0;
			overflow: hidden;
			transition: opacity 0.3s ease-in-out, max-height 0.3s ease-in-out;
		}

		.project-item:hover .project-content {
			opacity: 1;
			max-height: 500px;
		}
	}

	.project-description {
		color: #b0b0b0;
		font-size: 0.9rem;
		line-height: 1.5;
	}

	.project-link {
		color: #4a90e2;
		text-decoration: none;
		transition: color 0.2s ease-in-out;
	}

	.project-link:hover {
		color: #6aa8f7;
	}
</style>
		</main>
		<Footer />
	</body>
</html>
